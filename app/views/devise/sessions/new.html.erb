<div class="container sign-up-container">
  <div class="row justify-content-center">
    <div class="logo-container">
<%= image_tag "adrastos_logo.svg", class: "logo-header" %>
<div class="d-flex justify-content-center moving-container">
        <button class="sign-up-button"><%= link_to 'SIGN UP', new_user_registration_path %></button>
        <button class="sign-in-button"><%= link_to 'SIGN IN', user_session_path %></button>
        <div class="moving-item"></div>
     </div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label_html: { class: 'sign-in-input-labels' },
                input_html: { class: 'input-input' } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label_html: { class: 'sign-in-input-labels' },
                input_html: { class: 'input-input' } %>
    <%= f.input :remember_me,label_html: { class: 'sign-in-input-labels' }, input_html: { id: 'remember-me-label' },as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Log in", class: "log-in"%>
  </div>
<% end %>

<%= render "devise/shared/links"%>
    </div>
  </div>
</div>